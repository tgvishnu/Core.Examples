@model SampleAcademy.Models.Student.CourseGrade
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Add Grade";
    Layout = "_ContentLayout";
}

<fieldset>
    <h1>Add Grade</h1>
    <br />
    <form asp-controller="Student" role="form" asp-action="AddGrade" class="form-horizontal">
        <div asp-validation-summary="All" class="input-validation-error">
            <div class="form-group">
                <label asp-for="CourseName" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input type="text" asp-for="CourseName" class="form-control" />
                    <span asp-validation-for="CourseName" class="field-validation-error"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ProfessorName" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input type="text" asp-for="ProfessorName" class="form-control" />
                    <span asp-validation-for="ProfessorName" class="field-validation-error"></span>
                </div>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Grade" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input type="text" asp-for="Grade" class="form-control" />
                    <span asp-validation-for="Grade" class="field-validation-error"></span>
                </div>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="StudentUserName" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input type="text" asp-for="StudentUserName" class="form-control" />
                    <span asp-validation-for="StudentUserName" class="field-validation-error"></span>
                </div>
            </div>
            <br />
            <div>
                <label>&nbsp;</label>
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </div>
    </form>
</fieldset>